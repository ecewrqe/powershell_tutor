function Get-Power([double]$exponent, [double]$base){
    $product = $base
    if($exponent -gt 0){
        for($i=0;$i -lt $exponent-1;$i++){
            $product *= $base
        }
    }elseif ($exponent -eq 0){
        $product = 1.0
    }else{
        throw ("occure an error, the procedure is not complete")
    }

    return $product
}



